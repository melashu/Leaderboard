{
    "extends": "stylelint-config-standard",
       
    "plugins": [
        "stylelint-scss",
        "stylelint-csstree-validator"
    ],
    "rules": {
        "selector-class-pattern": null,
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen"
                ]
            }
        ]
    },
    "csstree/validator": true,
    "ignoreFiles": [
        "build/**",
        "dist/**",
        "**/reset*.css",
        "**/bootstrap*.css"
    ]
}